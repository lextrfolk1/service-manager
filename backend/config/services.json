{
  "services": {
    "frontend-service": {
      "type": "npm",
      "port": 3000,
      "dir": "~/Desktop/Lextr/UI/frontend-service",
      "command": "npm run dev"
    },
    "config-service": {
      "type": "java",
      "port": 8888,
      "dir": "~/Desktop/Lextr/Java/config-service",
      "command": "mvn spring-boot:run",
      "build": "mvn clean install -DskipTests",
      "description": "Spring Cloud Config Server"
    },
    "generic-service": {
      "type": "java",
      "port": 8053,
      "dir": "~/Desktop/Lextr/Java/generic-service",
      "command": "mvn spring-boot:run -Dspring-boot.run.jvmArguments=\"-Dspring.profiles.active=dev -Dspring.cloud.config.uri=http://localhost:8888\"",
